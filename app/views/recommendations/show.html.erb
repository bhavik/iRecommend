
<div class="container-fluid bs-docs-container" ng-controller='BookCtrl'>
  <div class="row-fluid">
    <div class="span2">
      <div class="bs-sidebar">
        <ul class="nav bs-sidenav">
          <li ng-repeat="category in cats">

            <a ng-href="/{{category.name}}">{{category.name}}</a>
          </li> 
        </ul>
      </div>
    </div>
    <div class="span9">
      <div class="bs-docs-section">
        <div class="page-header">
          <h3><%=@currRec[0].name%></h3>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <img src="/img/<%=@currRec[0].image_url%>" width="100%" height="70%"/>
      </div>
      <div class="span6">
        <h4><%=@currRec[0].info%></h4>
      </div>
    </div>
  </div>
</div>

