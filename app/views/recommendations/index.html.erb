<div class="modal fade" id="viewDetails" tabindex="-1" role="dialog" aria-labelledby="detailModal" aria-hidden="true" ng-controller='RecommendCtrl'>
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="detailModal">{{recDetails[0].name}}</h4>
      </div>
      <div class="modal-body">
       {{recDetails[0].info}}
       <br/>
       <br>

       <img src={{recDetails[0].image_url}} width="100%" height="100%" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

  <div class="container-fluid bs-docs-container" ng-controller='RecommendCtrl'>
  <div class="row-fluid">
    <div class="span2">
      <div class="bs-sidebar">
        <ul class="nav bs-sidenav">
          <li ng-repeat="category in cats">

            <a ng-href="/{{category.name}}">{{category.name}}</a>
          </li> 
        </ul>
      </div>
    </div>
    <div class="span9">
      <div class="bs-docs-section">
        <div class="page-header">
          <h3>All Recommendations</h3>
